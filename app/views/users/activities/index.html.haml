= provide(:title, 'Activities')

%section.content-header
  %h1
    Activities
%section.content
  .row
    .col-md-offset-3.col-md-6
      .nav-tabs-custom
        .tab-content
          - if @activities.size > 0
            - @activities.each do |activity|
              = render "users/activities/#{activity.partial_path}/#{activity.partial_name}", activity: activity, trackable: activity.trackable
          - else
            %h2 There are no activities yet.
      .text-center
        = paginate @activities
