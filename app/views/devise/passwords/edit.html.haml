= provide(:title, 'Change your password')

.register-box-body
  %h2.login-box-msg Change your password

  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token
    .form-inputs
      .form-group.has-feedback
        = f.input :password, label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) do
          = f.input_field :password, placeholder: 'New password', autofocus: true, class: 'form-control'
          %span.glyphicon.glyphicon-lock.form-control-feedback
      .form-group.has-feedback
        = f.input :password_confirmation, label: false, required: true do
          = f.input_field :password_confirmation, placeholder: 'Confirm your new password', autofocus: true, class: 'form-control'
          %span.glyphicon.glyphicon-lock.form-control-feedback
    .row
      .col-xs-12
        .form-actions
          = f.button :submit, "Change my password", class: "btn btn-primary btn-block btn-flat"
  = render "devise/shared/links"
