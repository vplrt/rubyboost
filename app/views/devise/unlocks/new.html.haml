= provide(:title, 'Resend unlock instructions.')

.register-box-body
  %h2.login-box-msg Resend unlock instructions

  = simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
    = f.error_notification
    = f.full_error :unlock_token
    .form-inputs
      .form-group.has-feedback
        = f.input :email, label: false, required: true do
          = f.input_field :email, placeholder: 'Email', autofocus: true, class: 'form-control'
          %span.glyphicon.glyphicon-envelope.form-control-feedback
    .row
      .col-xs-12
        .form-actions
          = f.button :submit, "Resend unlock instructions", class: "btn btn-primary btn-block btn-flat"
  = render "devise/shared/links"
